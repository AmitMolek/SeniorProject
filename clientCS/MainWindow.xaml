<Window x:Class="clientCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientCS"
        mc:Ignorable="d"
        Title="MainWindow" Height="244" Width="504.943">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="165*"/>
            <RowDefinition Height="269*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="359,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40" Width="115" Click="btnConnect_Click" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.165"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="label" Content="Status:" HorizontalAlignment="Left" Height="31" Margin="198,26,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="lblConnectionStatus" Content="disconnected" HorizontalAlignment="Left" Margin="253,26,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="397,11.4,0,0" VerticalAlignment="Top" Click="btnBrowse_Click" Grid.Row="1" />
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="20" Margin="135,10.4,0,0" Text="TextBox" TextWrapping="NoWrap" VerticalAlignment="Top" Width="247" AllowDrop="True" PreviewDragLeave="TextBox_Leave" PreviewDragEnter="TextBox_DragEnter" PreviewDragOver="TextBox_DragEnter" PreviewDrop="TextBox_Drop" Grid.Row="1"/>
        <Button x:Name="btnUpload" Content="Upload" HorizontalAlignment="Left" Margin="175,50.4,0,0" VerticalAlignment="Top" Grid.Row="1" Click="btnSendFile_Click" Width="141"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="77,30,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="110"/>
        <Label x:Name="label1" Content="Username" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
