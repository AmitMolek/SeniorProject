<Window x:Class="clientCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientCS"
        mc:Ignorable="d"
        Title="MainWindow" Height="180.8" Width="504.943">
    <Grid Margin="0,0,0.4,0" Height="191" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="359,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="40" Width="115" Click="btnConnect_Click" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.165"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="label" Content="Status:" HorizontalAlignment="Left" Height="23" Margin="198,15,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="lblConnectionStatus" Content="disconnected" HorizontalAlignment="Left" Margin="253,12,0,0" VerticalAlignment="Top" Height="26" Width="80"/>
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="397,23.2,0,0" VerticalAlignment="Top" Click="btnBrowse_Click" Grid.Row="1" Height="19" Width="70" />
        <TextBox x:Name="txtPath" Height="20" Margin="135,22.2,116,0" Text="TextBox" TextWrapping="NoWrap" VerticalAlignment="Top" AllowDrop="True" PreviewDragLeave="TextBox_Leave" PreviewDragEnter="TextBox_DragEnter" PreviewDragOver="TextBox_DragEnter" PreviewDrop="TextBox_Drop" Grid.Row="1"/>
        <Button x:Name="btnUpload" Content="Upload" HorizontalAlignment="Left" Margin="178,56.2,0,0" VerticalAlignment="Top" Grid.Row="1" Click="btnSendFile_Click" Width="141" Height="19"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="77,15,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="110"/>
        <Label x:Name="label1" Content="Username" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Width="67" Height="26"/>

    </Grid>
</Window>
